<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>SilverSquad_CloningVat</defName>
        <label>cloning vat</label>
        <description>Todo.</description>
        <thingClass>ProjectSilverSquad.ThingClass_CloningVat</thingClass>
        <tickerType>Rare</tickerType>
        <drawerType>MapMeshAndRealTime</drawerType>
        <passability>Impassable</passability>
        <fillPercent>1</fillPercent>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <uiIconScale>1</uiIconScale>
        <uiIconOffset>(0, 0.1)</uiIconOffset>
        <uiOrder>2520</uiOrder>
        <stackLimit>1</stackLimit>
        <graphicData>
            <texPath>ProjectSilverSquad/CloningVat/CloningVat</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(4,4)</drawSize>
        </graphicData>
        <size>(3,2)</size>
        <rotatable>true</rotatable>
        <defaultPlacingRot>South</defaultPlacingRot>
        <statBases>
            <MaxHitPoints>1500</MaxHitPoints>
            <WorkToBuild>8000</WorkToBuild>
            <Mass>230</Mass>
            <Flammability>0.3</Flammability>
            <Beauty>-5</Beauty>
        </statBases>
        <costList>
            <Steel>100</Steel>
            <Plasteel>100</Plasteel>
            <Neutroamine>20</Neutroamine>
            <ComponentIndustrial>6</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <pathCost>42</pathCost>
        <blockWind>true</blockWind>
        <canOverlapZones>false</canOverlapZones>
        <designationCategory>Misc</designationCategory>
        <hasInteractionCell>true</hasInteractionCell>
        <interactionCellOffset>(0,0,2)</interactionCellOffset>
        <researchPrerequisites>
                <li>SilverSquad_CloningTech</li>
            </researchPrerequisites>
        <building>
            <ai_chillDestination>false</ai_chillDestination>
            <!--<workTableRoomRole>Laboratory</workTableRoomRole>-->
        </building>
        <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>3</glowRadius>
                <glowColor>(156, 255, 250)</glowColor>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>900</basePowerConsumption>
                <idlePowerDraw>100</idlePowerDraw>
            </li>
        </comps>
        <modExtensions>
            <li Class="ProjectSilverSquad.ModExtension">
                <maxNutPasteCapacity>7</maxNutPasteCapacity>
                <baseNutConsumptionPerDay>1</baseNutConsumptionPerDay>
                <baseEmbryoIncubationTicks>180,000</baseEmbryoIncubationTicks>
                <basePawnGrowTimeTicks>420,000</basePawnGrowTimeTicks>
                <instabilityPerPeriod>0.5</instabilityPerPeriod> <!-- Given each 250 ticks -->
                <instabilityPeriod>25,000</instabilityPeriod> <!-- Should reach 100% in 10 hours-->
                <embryoGraphicData>
                    <texPath>ProjectSilverSquad/Items/Fleshmass/Fleshmass</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <shaderType>Cutout</shaderType>
                    <drawSize>(1,1)</drawSize>
                </embryoGraphicData>
                <vatAboveGraphicData>
                    <texPath>ProjectSilverSquad/CloningVat/CloningVatAbove</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>(4,4)</drawSize>
                </vatAboveGraphicData>
                <outcomes>
                    <li>
                        <weight>30</weight>
                        <worker Class="ProjectSilverSquad.OutcomeNothing" />
                    </li>
                    <li>
                        <weight>30</weight>
                        <worker Class="ProjectSilverSquad.OutcomeGeneAlteredClone">
                            <preNoReturnChance>0.3</preNoReturnChance>
                            <postNoReturnChance>0.6</postNoReturnChance>
                            <numberOfGenes>8~12</numberOfGenes>
                        </worker>
                    </li>
                    <li>
                        <weight>30</weight>
                        <worker Class="ProjectSilverSquad.OutcomeHediffAlteredClone">
                            <preNoReturnChance>0.3</preNoReturnChance>
                            <postNoReturnChance>0.6</postNoReturnChance>
                            <numberOfHediffs>4</numberOfHediffs>
                            <allowedHediffs>
                                <li>
                                    <hediffDef>Carcinoma</hediffDef>
                                </li>
                                <li>
                                    <hediffDef>HeartAttack</hediffDef>
                                    <parts>
                                        <li>Heart</li>
                                    </parts>
                                </li>
                                <li>
                                    <hediffDef>HeartArteryBlockage</hediffDef>
                                    <parts>
                                        <li>Heart</li>
                                    </parts>
                                </li>
                                <li>
                                    <hediffDef>Alzheimers</hediffDef>
                                    <parts>
                                        <li>Brain</li>
                                    </parts>
                                </li>
                                <li>
                                    <hediffDef>Dementia</hediffDef>
                                    <parts>
                                        <li>Brain</li>
                                    </parts>
                                </li>
                                <li>
                                    <hediffDef>BadBack</hediffDef>
                                    <parts>
                                        <li>Spine</li>
                                    </parts>
                                </li>
                                <li>
                                    <hediffDef>Frail</hediffDef>
                                    <wholeBody>true</wholeBody>
                                </li>
                                <li>
                                    <hediffDef>Cataract</hediffDef>
                                    <parts>
                                        <li>Eye</li>
                                    </parts>
                                </li>
                                <li>
                                    <hediffDef>Asthma</hediffDef>
                                    <parts>
                                        <li>Lung</li>
                                    </parts>
                                </li>
                                <li MayRequire="Ludeon.RimWorld.Anomaly">
                                    <hediffDef>OrganDecay</hediffDef>
                                    <parts>
                                        <li>Heart</li>
                                        <li>Lung</li>
                                        <li>Kidney</li>
                                    </parts>
                                </li>
                                <li MayRequire="Ludeon.RimWorld.Anomaly">
                                    <hediffDef>CrumblingMind</hediffDef>
                                    <parts>
                                        <li>Brain</li>
                                    </parts>
                                </li>
                            </allowedHediffs>
                        </worker>
                    </li>
                    <li MayRequire="Ludeon.Rimworld.Anomaly">
                        <weight>5</weight>
                        <worker Class="ProjectSilverSquad.OutcomeSpawnAnomaly">
                            <allowedAnomalies>
                                <li>Bulbfreak</li>
                                <li>Gorehulk</li>
                            </allowedAnomalies>
                        </worker>
                    </li>
                    <li MayRequire="Ludeon.Rimworld.Anomaly">
                        <weight>5</weight>
                        <worker Class="ProjectSilverSquad.OutcomeMutateClone">
                            <allowedMutations>
                                <li>Shambler</li>
                                <li>Ghoul</li>
                            </allowedMutations>
                        </worker>
                    </li>
                </outcomes>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="BenchBase">
        <defName>SilverSquad_ChipWorkbench</defName>
        <label>chip workbench</label>
        <description>A work station for producing the chips involved in the cloning process.</description>
        <thingClass>Building_WorkTable</thingClass>
        <graphicData>
            <texPath>ProjectSilverSquad/ChipBench/ChipBench</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
        <costList>
            <Steel>80</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>3000</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Cleanliness>-2</Cleanliness>
        </statBases>
        <size>(2,1)</size>
        <designationCategory>Misc</designationCategory>
        <uiOrder>2520</uiOrder>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(1,0,-1)</interactionCellOffset>
        <surfaceType>Item</surfaceType>
        <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>350</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
            <li Class="CompProperties_Breakdownable" />
        </comps>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <workTableRoomRole>Workshop</workTableRoomRole>
            <workTableNotInRoomRoleFactor>0.8</workTableNotInRoomRoleFactor>
        </building>
        <constructEffect>ConstructMetal</constructEffect>
        <researchPrerequisites>
            <li>SilverSquad_CloningTech</li>
        </researchPrerequisites>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
    </ThingDef>
</Defs>